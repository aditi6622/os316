#include<iostream>
using namespace std;
int main()
{
	int n,burst_time[n];
cout<<"enter the number of processes:\n";
cin>>n;
cout<<"enter the burst time of each process\n";
for(int i=0;i<n;i++)
{
	cout<<"enter burst time for process: "<<i+1;
	cout<<"\n";
	cin>>burst_time[i];
}
int position,temp,arrival_time[n],process_number[n];
for(int i=0;i<n;i++)
{
	cout<<"enter arrival time for process: "<<i+1;
	cout<<"\n";
	cin>>arrival_time[i];
}
//sorting burst time in ascending order using selection sort
  for(int i=0;i<n;i++)
    {
        position=i;
        for(int j=i+1;j<n;j++)
        {
            if(burst_time[j]<burst_time[position])
                position=j;
        }
 
        temp=burst_time[i];
        burst_time[i]=burst_time[position];
        burst_time[position]=temp;
 
        temp=process_number[i];
        process_number[i]=process_number[position];
        process_number[position]=temp;
    }   
}
